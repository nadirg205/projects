PROGRAM Volume
{	//This program testing nested if-statements
	
	//Variable declarations
	float base_rad = 10, height = 20;
	float cone_volume=0, cylinder_volume=0;	
	string str1 = "Volume of Cone = ", str2 = "Volume of Cylinder = ";
	int x;
		
	/*Testing Nested If statement in else-clause*/
	if (base_rad > 10)
	{
		if(height == 0) {
			cone_volume = (1.0/3 * 3.14) * base_rad * base_rad * height;
			print(str1, cone_volume);
		}
		else
			print("There is no volume!");
	}
	else
	{
		if(height != 0)
			cylinder_volume = 3.14 * base_rad * base_rad * height;
		print(str2, cylinder_volume);
	}
}
